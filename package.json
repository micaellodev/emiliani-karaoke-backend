{
    "name": "karaoke-backend",
    "version": "1.0.0",
    "description": "NestJS backend for Karaoke System",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "bun run nest start",
        "start:dev": "bun run nest start --watch",
        "start:debug": "bun run nest start --debug --watch",
        "start:prod": "bun x prisma migrate deploy && bun dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "bun test",
        "test:watch": "bun test --watch",
        "test:cov": "bun test --coverage",
        "test:debug": "bun test --inspect-brk",
        "test:e2e": "bun test ./test/jest-e2e.json",
        "seed": "bun run prisma/seed.ts",
        "db:push": "bun x prisma db push",
        "db:generate": "bunx prisma generate",
        "db:seed": "bun run prisma/seed.ts",
        "postinstall": "bunx prisma generate"
    },
    "dependencies": {
        "@libsql/client": "^0.17.0",
        "@nestjs/common": "^10.0.0",
        "@nestjs/core": "^10.0.0",
        "@nestjs/jwt": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/platform-socket.io": "^10.0.0",
        "@nestjs/websockets": "^10.0.0",
        "@prisma/client": "5",
        "bcryptjs": "^2.4.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.18.0",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.1",
        "socket.io": "^4.7.0",
        "youtube-sr": "^4.3.12"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/better-sqlite3": "^7.6.13",
        "@types/node": "^20.0.0",
        "@types/passport-jwt": "^4.0.0",
        "@types/pg": "^8.16.0",
        "prisma": "5",
        "typescript": "^5.0.0"
    }
}